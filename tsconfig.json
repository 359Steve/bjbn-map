{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"jsx": "preserve",
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment",
		"declaration": true,
		"declarationDir": "dist",
		"emitDeclarationOnly": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": [
		"src"
	]
}